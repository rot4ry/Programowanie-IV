<Window x:Class="Lab12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" x:Name="StartingWindow" WindowStartupLocation="CenterScreen">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="792" Background="Aquamarine">
            <Button x:Name="loginButton" Content="Login" HorizontalAlignment="Left" VerticalAlignment="Top" Width="177" Margin="604,9,0,0" Height="24" Click="loginButton_Click"/>
        </Border>
        <TextBox x:Name="WelcomeTextbox" HorizontalAlignment="Left" Height="71" Margin="130,132,0,0" TextWrapping="Wrap" Text="Welcome!" VerticalAlignment="Top" Width="524" FontSize="48" TextAlignment="Center" Visibility="Hidden"/>
        <TextBox x:Name="UsernameTextbox" HorizontalAlignment="Left" Height="50" Margin="211,222,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="388" Visibility="Hidden"/>

    </Grid>
</Window>
